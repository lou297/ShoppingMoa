<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app = "http://schemas.android.com/apk/res-auto" xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:padding = "@dimen/padding_shopItem_layout"
        android:layout_margin = "@dimen/margin_shopItem_layout"
        android:background = "@drawable/shop_item_round_border_layout">

    <ImageView
            android:id = "@+id/shoppingItem_image"
            android:layout_width = "0dp"
            android:layout_height = "@dimen/size_shopItem_image"
            android:background="@drawable/shop_item_round_border_image"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"/>

    <TextView
            android:id = "@+id/shoppingItem_date"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize = "@dimen/size_shopItem_date_textView"
            android:textColor = "@color/gray"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/shoppingItem_image"/>

    <TextView
            android:id = "@+id/shoppingItem_name"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize = "@dimen/size_shopItem_name_textView"
            android:textColor = "@color/black"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/shoppingItem_date"/>

    <TextView
            android:id = "@+id/shoppingItem_code"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize = "@dimen/size_shopItem_code_textView"
            android:textColor = "@color/black"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/shoppingItem_name"/>

    <TextView
            android:id = "@+id/shoppingItem_price"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize = "@dimen/size_shopItem_price_textView"
            android:textColor = "@color/black"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/shoppingItem_code"/>

</androidx.constraintlayout.widget.ConstraintLayout>